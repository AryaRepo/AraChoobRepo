<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>
  <style name="tabLayoutTitles" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="defaultTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:gravity">center</item>
        <item name="tabTextAppearance">@style/tabLayoutTitles</item>
        <item name="tabSelectedTextColor">#FFF</item>
        <item name="tabIndicatorColor">#fff</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabBackground">@drawable/detail_tab_selector</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="rightSideToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
