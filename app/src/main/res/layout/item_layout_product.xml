<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItemView"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProductPhoto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProductPhoto"
            android:gravity="right"
            android:padding="5dp"
            android:text="عنوان محصول"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtProductTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line_divider"/>

        <TextView
            android:id="@+id/txtProductPrimaryPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProductTitle"
            android:gravity="right"
            android:padding="5dp"
            android:text=" 1000000 تومان"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtProductDiscountedPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProductPrimaryPrice"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/dividerAboveProductCount"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtProductDiscountedPrice"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line_divider"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/txtProductCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dividerAboveProductCount"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>