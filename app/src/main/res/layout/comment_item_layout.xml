<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgUserProfileThumb"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_profile_user"/>

        <TextView
            android:id="@+id/txtUserProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/imgUserProfileThumb"
            android:text="علی احمدی میگه :"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/txtCommentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUserProfileThumb"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="top|right"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="موضوع : کیفیت کاراشون"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCommentTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="top|right"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:textSize="13sp"
            android:text="من از صنایع چوب آرا نوین مهر خیلی راضی ام واقعا عالی هستن"
            android:textColor="#000"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
