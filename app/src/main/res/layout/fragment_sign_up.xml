<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_profile_user"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="ثبت نام کاربر"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edtUsernameSignUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_edit_text_border"
            android:gravity="center_horizontal|center_vertical"
            android:hint="نام کاربری ( شماره تلفن )"
            android:inputType="number"
            android:maxLength="11"
            android:padding="5dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/edtPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_edit_text_border"
            android:gravity="center_horizontal|center_vertical"
            android:hint="گذرواژه"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/edtRepeatPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_edit_text_border"
            android:gravity="center_horizontal|center_vertical"
            android:hint="تکرار گذرواژه"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_button_drawable"
            android:gravity="center"
            android:text="ثبت نام"
            android:textColor="#ffffff"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btnLoginAccountSignUp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="25dp"
            android:text="ورود به حساب کاربری"
            android:textColor="#F44336"
            android:textSize="16sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>