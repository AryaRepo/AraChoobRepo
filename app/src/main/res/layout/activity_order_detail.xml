<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerOrderDetailActivity"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center|right"
        android:paddingRight="15dp"
        android:text="اطلاعات سبد"
        android:textColor="#FFF"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/order_line_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerOrderDetailActivity"
        android:background="#e1e1e1"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            android:id="@+id/txtOrderProductPrice"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="1.25"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="قیمت (تومان)"
            android:textColor="#FFF"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#88757575"/>

        <TextView
            android:id="@+id/txtOrderProductCount"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.5"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="تعداد"
            android:textColor="#FFF"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#88757575"/>

        <TextView
            android:id="@+id/txtOrderProductName"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="1.25"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="عنوان محصول"
            android:textColor="#FFF"
            android:textSize="13sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listOderDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_line_titles"
        android:paddingBottom="12dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/order_detail_TotalPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#fff"
            android:text="جمع سفارشات : 2000000 تومان"
            android:textSize="15sp"/>
    </RelativeLayout>

</RelativeLayout>
