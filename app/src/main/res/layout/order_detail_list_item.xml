<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/order_line_titles_item_lay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e1e1e1"
              android:orientation="horizontal"
              android:weightSum="3">

    <TextView
        android:id="@+id/txtOrderProductPriceItem"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="1.25"
        android:gravity="center"
        android:text="2500 تومان"
        android:textColor="#212121"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#88757575"/>

    <TextView
        android:id="@+id/txtOrderProductCountItem"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="5 تا "
        android:textColor="#212121"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#88757575"/>

    <TextView
        android:id="@+id/txtOrderProductNameItem"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="1.25"
        android:ellipsize="end"
        android:gravity="center|right"
        android:maxEms="15"
        android:maxLines="1"
        android:paddingRight="5dp"
        android:text="چوب پرده ی سلطنتی"
        android:textColor="#212121"
        android:textSize="12sp"/>

</LinearLayout>
