<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:text="ایجاد پیام جدید"
        android:textColor="#FFF"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edtTicketTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/simple_edit_text_border"
        android:gravity="center_horizontal|center_vertical"
        android:hint="عنوان پیام"
        android:lines="1"
        android:padding="8dp"
        android:textColor="#000"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/edtTicketText"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/simple_edit_text_border"
        android:gravity="right"
        android:hint="متن پیام اولیه"
        android:padding="8dp"
        android:textColor="#000"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btnSendTicket"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button_drawable"
        android:text="ارسال به مدیر"
        android:textColor="#fff"
        android:textSize="15sp"/>
</LinearLayout>